<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-4 col-md-offset-4">
      <%= simple_form_for @bike do |f| %>
        <div class="form-group">
          <%= f.input :size, collection: Bike.sizes.keys %>
        </div>
        <div class="form-group">
          <%= f.input :price_per_day %>
        </div>
        <div class="form-group">
          <%= f.input :neighborhood %>
        </div>
        <div class="form-group">
          <%= f.input :description %>
        </div>
        <%= f.submit "add a bike", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
