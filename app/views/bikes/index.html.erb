<div class="header1">
  <h1>WELCOME TO BIKE IT TOKYO!</h1>
</div>

<div class="header2">
  <h1>RENT YOUR RIDE HERE</h1>
</div>

<div class="line">
  <h1>_____________________________________________________________________________________________________________________________________________________________________________________</h1>
</div>

<div class="row">
  <% @bikes.each do |bike| %>
    <div class="col-xs-12 col-sm-4">
      <%= link_to bike_path(bike.id) do %>
        <div class="flip-container <%= bike.available_now? ? "available-bike" : "unavailable-bike" %>">
          <div class="flip-card" style='background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= image_path bike.photo %>)'>
            <div class="flip-front-card">
              <div class="bike-price">
                <h2> <%= bike.price_per_day %>Â¥ per day</h2>
              </div>
              <div class="bike-neighborhood">
                <h2> <%= bike.neighborhood %> </h2>
              </div>
            </div>
            <div class="flip-reverse-card">
              <div class="bike-description">
                <p> <%= bike.description %></p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

