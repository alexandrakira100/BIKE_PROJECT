


<div class="productPage">
  <div class="row">
    <div class="col-md-6 container 1">
      <div class="individual_card" style='background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= image_path @bike.photo %>)'>
      </div>
    </div>
    <div class="col-md-6 container2">
      <div class="bike-name">
        <h2>Bike Details</h2>
      </div>
      <div class="individual-bike-price">
        <div class="fullprice">
          <h2>1500¥</h2>
        </div>
        <h2><%= @bike.price_per_day %>¥</h2>
      </div>
      <div class="bike-size">
        <h2>Bike Size: <%= @bike.size %></h2>
      </div>
      <div class="bike-individual-description">
        <p> <%= @bike.description %> </p>
      </div>

      <%= render "rentals/form" %>
      <!-- <div class="rent-btn-medium">


      </div> -->
    </div>
  </div>
  <div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
  ></div>
</div>




