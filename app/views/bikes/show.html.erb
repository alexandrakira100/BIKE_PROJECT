

<% @bikes.each do |bike| %>
<div class="productPage">
  <div class="row">
    <div class="col-md-6 container 1">
      <div class="card" style='background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= image_path @bike.photo %>)'>
      </div>
    </div>
    <div class="col-md-6 container2">
      <div class="bike-name">
        <h2>Crimson Lightning</h2>
      </div>
      <div class="bike-price">
        <div class="fullprice">
          <h2>1500¥</h2>
        </div>
        <h2><%= @bike.price_per_day %>¥</h2>
      </div>
      <div class="bike-neighborhood">
        <h2>Neighborhood: <%= @bike.neighborhood %> </h2>
      </div>
      <div class="bike-size">
        <h2>Bike Size: <%= @bike.size %></h2>
      </div>
      <div class="bike-description">
        <p> <%= @bike.description %> </p>
      </div>
      <div class="rent-btn-medium">
        Rent this Bike
      </div>
    </div>
  </div>
</div>
<% end %>



