<script type="text/javascript" src="https://code.jquery.com/jquery-1.11.3.min.js"></script>
<link rel="stylesheet" href="https://formden.com/static/cdn/bootstrap-iso.css" />

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/js/bootstrap-datepicker.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/css/bootstrap-datepicker3.css"/>

<script>
  $(document).ready(function(){
    var start_date_input=$('input[name="start_date"]'); //our date input has the name "date"
    var end_date_input=$('input[name="end_date"]'); //our date input has the name "date"
    var container=$('.bootstrap-iso form').length>0 ? $('.bootstrap-iso form').parent() : "body";
    var options={
      format: 'yyyy/mm/dd',
      container: container,
      todayHighlight: true,
      autoclose: true,
    };
    start_date_input.datepicker(options);
    end_date_input.datepicker(options);
  })
</script>

    <%= simple_form_for [@bike, @rental] do |f| %>
      <div class="form-group">
        <%= f.label :start_date %>
        <input class="form-control" id="start_date" name="start_date" placeholder="MM/DD/YYY" type="string"/>

       </div>

       <div class="form-group">
        <%= f.label :end_date %>
        <input class="form-control" id="end_date" name="end_date" placeholder="MM/DD/YYY" type="string"/>
       </div>

      <div class="rent-button-container">
        <div class="rent-button">
          <%= f.submit "RENT THIS BIKE", class: "btn button_bike" %>
        </div>

      </div>
    <% end %>
